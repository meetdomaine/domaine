---
import { sanityClient } from 'sanity:client';
import LayoutGlobal from './Layout-Global.astro';
// import Header from '../components/domaine/sections/Header.astro';
import Header from '../components/global/header/global-Header.astro';
import Footer from '../components/global/global-Footer.astro';

interface Props {
	title: string;
	description?: string;
	image?: string;
	theme?: string;
    backgroundColor?: string;
    foregroundColor?: string;
    searchFilter?: string;
    activePath?: string;
}

const { title, description, image, searchFilter, activePath } = Astro.props;

// Header
const headerSettings = await sanityClient.fetch(`*[_type == "settings_header" && _id == "settings_header--domaine"][0]`)

// Footer
const footerSettings = await sanityClient.fetch(`*[_type == "settings_footer" && _id == "settings_footer--domaine"][0]`)

// Styling
import '../styles/domaine/typography.css'
import '../styles/domaine/color.css'
import { imageFields } from '../components/global/utils/cms-queries';

// Brand
const brands = await sanityClient.fetch(`*[_type == "type_agencyBrand"]`)
const currentBrand = await sanityClient.fetch(`*[_type == "type_agencyBrand" && slug.current == "domaine"][0]`)

// Preloader
const preloaderContent = await sanityClient.fetch(`*[_type == "settings_preloader" && _id == "settings_preloader-domaine"][0]{..., heading, images[]{${imageFields}} }`)
---


<LayoutGlobal
    title={`${title ? title : "Home"} | ${currentBrand.metafields.title}`}
    description={ description ? description : currentBrand.description }
    theme="light"
    favicon={currentBrand.favicon}
    image={image ? image : currentBrand.metafields.image}
    searchFilter={searchFilter}
    preloaderContent={preloaderContent}
    brand="domaine"
>
    <Header
        brands={brands}
        currentBrand={currentBrand}
        headerSettings={headerSettings}
        activePath={activePath}
    />
    
    <main>
        <slot />
    </main>
    <Footer 
        footerSettings={footerSettings}
    />
</LayoutGlobal>