import AtomHubspotForm from '../components/global/atoms/atom-hubspotForm.astro';
import { getBrandSettings_Domaine, getFooterSettings_Domaine } from "../components/global/utils/cms-content"

interface Props {
	title: string;
	description?: string;
	image?: string;
	theme?: string;
    backgroundColor?: string;
    foregroundColor?: string;
    searchFilter?: string;
    activePath?: string;
    searchExposed?: boolean,
    noIndex?: boolean, 
}

const { title, description, image, searchFilter, activePath, searchExposed, noIndex } = Astro.props;

// console.log('layout')
let _currentBrand = undefined
