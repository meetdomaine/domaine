---
import AtomButton from "../../../global/atoms/atom-button.astro"
import AtomSanityMedia from "../../../global/atoms/atom-sanityMedia.astro"

const { heading, subheading, button, media, heroTextColor } = Astro.props
---
<section id="domaine-home-hero" class="home_hero" data-color={heroTextColor === "light" ? "light" : "dark"}>
    <div class="section-content">
        <div class="section-title">
            <h1 class="h3 anim-fade-up">{heading}</h1>
            {subheading && <p class="anim-fade-up">{subheading}</p>}
        </div>
        {button.text && button.url &&
            <AtomButton 
                text={button.text}
                url={button.url}
                newTab={button.newTab}
                style="primary"
                icon="arrow-diagonal"
                classList="anim-fade-up color-invert"
            />
        }
    </div>
    {media && 
        <div class="section-media">
            <AtomSanityMedia 
                video={media.video}
                image={media.image}
                sizes="100vw"
                cover={true}
            />
        </div>
    }
</section>

<script>
    import { fadeUp, gsap } from "../../../global/utils/gsap"

    const animateSection = () => {
        const section = document.getElementById('domaine-home-hero')
        const fadeUpElements = section.querySelectorAll('.anim-fade-up')
        const animTimeline = gsap.timeline({ defaults: {duration:1, ease: "power4.out"}})
        if (fadeUpElements) fadeUp(fadeUpElements, animTimeline, ">", 0.2)
    }

    window.addEventListener("preload:complete", () => {
        animateSection()
    })
</script>

<style>
    .home_hero {
        padding-inline: var(--page-margin);
        padding-block: calc(var(--space-lg) + var(--pixel-border-height));
        min-height: 95svh;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        align-items: center;
        gap: var(--space-md);
        position: relative;
        background-color: var(--color-brand);
    }

    .home_hero[data-color="light"] {
        color: var(--color-lightest);
    }

    .section-title {
        max-width: 30em;
    }

    .section-content {
        position: relative;
        z-index: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        gap: var(--space-md);
        mix-blend-mode: difference;
    }

    .section-media {
        position: absolute;
        inset: 0;
        height: 100%;
    }
</style>