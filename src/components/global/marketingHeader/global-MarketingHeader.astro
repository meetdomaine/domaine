---
import { Icon } from "astro-icon/components"

const {colorScheme, currentBrand } = Astro.props
---
<header
  data-color-scheme={colorScheme} 
>
  <a href={currentBrand === "domaine" ? "/" : "/studio"}>
    <Icon name={currentBrand === "domaine" ? "domaine-wordmark" : "domaine-studio"} />
  </a>
</header>

<style>
  header {
    position: fixed;
    left: 0;
    right: 0;
    height: var(--header-height);
    display: flex;
    flex-direction: column;
    justify-content: center;
    /* align-items: center; */
    padding-inline: var(--page-margin);
    z-index: 999;
    background-color: transparent;
  }

  header :global(svg) {
    flex: 0 0 80%;
  }
</style>