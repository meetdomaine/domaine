---
import { sanityClient } from "sanity:client"
import { practicesQuery, agencyBrandsQuery } from "../../../lib/cms-queries"
import GlobalPracticeCard from "../practices/global-practiceCard.astro"
import GlobalPracticesGrid from "../practices/global-practicesGrid.astro"
import { getTranslationString } from "../../../lib/translations"

const { section, brand, key, locale } = Astro.props
// console.log(agencyBrands)
---
<section class="section-practices">
    <div class="section-title">
        <h2 
            class="h5"
            data-animate-viewport="true"
            data-animation="fade"
        >{getTranslationString(section.title, locale)}</h2>
        <div 
            class="subheading h3"
            data-animate-viewport="true"
            data-animation="fade-up"
            data-animation-delay={200}
        >{getTranslationString(section.heading, locale)}</div>
    </div>

    <GlobalPracticesGrid locale={locale} />
    
</section>

<style>
    .section-practices {
        padding-inline: var(--page-margin);
        padding-block: var(--space-4xl);
        display: flex;
        flex-direction: column;
        align-items: stretch;
        gap: var(--space-2xl);
    }

    .section-title {
        display: grid;
        grid-template-columns: 1fr 1.5fr;
    }

    .subheading {
        max-width: 15em;
    }

    @media screen and (width <= 768px) {
        .section-title {
            display: flex;
            flex-direction: column;
            gap: var(--space-xs);
        }
    }
</style>