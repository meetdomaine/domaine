---
import { Icon } from "astro-icon/components"
import AtomCounter from "../atoms/atom-counter.astro"

const { brand, section, key } = Astro.props
---
<section class="section-link-list">

  <div class="section-title">
    <h2 class="title-xl">{section.title}</h2>
    <AtomCounter 
      count={section.links.length}
    />
  </div>


  <div class="section-content">
    {section.heading && <p class="h5">{section.heading}</p>}
    <div class="links">
      {section.links.map((link) => (
        <a class="link" href={link.url} target={link.newTab ? "_blank" : ""}>
          <div>
            <div class="link-text">{link.title}</div>
            {link.subtitle && <div class="subtitle">{link.subtitle}</div>}
          </div>
          <Icon name="arrow-diagonal" />
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .section-link-list {
    display: flex;
    flex-direction: column;
    align-items: stretch;
    padding-inline: var(--page-margin);
    padding-block: var(--space-4xl);
  }
  
  .section-title {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
  }

  .section-content {
    align-self: center;
    max-width: 40rem;
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  
  .links {
    display: flex;
    flex-direction: column;
    /* gap: var(--space-lg); */
  }

  .link {
    text-decoration: none;
    border-top: 1px solid var(--color-border);
    padding-block: var(--space-xs);
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
  }
  
  .link-text {
    flex: 1 0 auto;
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .subtitle {
    color: var(--color-foreground-secondary);
  }

</style>