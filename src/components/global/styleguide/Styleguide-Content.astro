---
import AtomButton from "../atoms/atom-button.astro";
import StyleguideColorScheme from "./Styleguide-ColorScheme.astro";

---

<section class="section-typography">
  <h1>Heading 1</h1>
  <h2>Heading 2</h2>
  <h3>Heading 3</h3>
  <h4>Heading 4</h4>
  <h5>Heading 5</h5>
  <h6>Heading 6</h6>
  <p>Lorem ipsum dolor sit amet.</p>
  <p class="caption">Caption</p>
  <p class="utility">Utility</p>
</section>

<section class="section-buttons">
  <AtomButton 
    text="Button Primary"
    style="primary"
    url="#"
  />
  <AtomButton 
    text="Button Secondary"
    style="secondary"
    url="#"
  />
  <AtomButton 
    text="Button Tertiary"
    style="tertiary"
    url="#"
  />
  <AtomButton 
    text="Text Link"
    style="text-link"
    url="#"
  />
</section>

<section class="section-spacers">
  <span class="spacer spacer-4xl"></span>
  <span class="spacer spacer-3xl"></span>
  <span class="spacer spacer-2xl"></span>
  <span class="spacer spacer-xl"></span>
  <span class="spacer spacer-lg"></span>
  <span class="spacer spacer-md"></span>
  <span class="spacer spacer-sm"></span>
  <span class="spacer spacer-xs"></span>
  <span class="spacer spacer-2xs"></span>
</section>

<section class="section-color-schemes">
  <StyleguideColorScheme title="Default" colorScheme="default" />
  <StyleguideColorScheme title="Secondary" colorScheme="secondary" />
  <StyleguideColorScheme title="Inverted" colorScheme="invert" />
  <StyleguideColorScheme title="Brand 01" colorScheme="brand-01" />
  <StyleguideColorScheme title="Brand 02" colorScheme="brand-02" />
  <StyleguideColorScheme title="Brand 03" colorScheme="brand-03" />
  <StyleguideColorScheme title="Glass Dark" colorScheme="glass-dark" />
  <StyleguideColorScheme title="Glass Light" colorScheme="glass-light" />
</section>



<style>

  section {
    padding: var(--header-height) var(--page-margin) var(--space-xl);
    display: flex;
    flex-direction: column;
    margin-bottom: var(--space-xl);
  }

  .section-typography {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .section-spacers {
    display: flex;
    flex-direction: row;
    gap: var(--space-xs);
    align-items: flex-start;
    flex-wrap: wrap;
  }

  .section-color-schemes {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-md);
  }

  .spacer {
    aspect-ratio: 1 / 1;
    background-color: var(--color-foreground);
  }

  .spacer-2xs {
    width: var(--space-2xs);
  }

  .spacer-xs {
    width: var(--space-xs);
  }

  .spacer-sm {
    width: var(--space-sm);
  }

  .spacer-md {
    width: var(--space-md);
  }

  .spacer-lg {
    width: var(--space-lg);
  }

  .spacer-xl {
    width: var(--space-xl);
  }
  
  .spacer-2xl {
    width: var(--space-2xl);
  }

  .spacer-3xl {
    width: var(--space-3xl);
  }

  .spacer-4xl {
    width: var(--space-4xl);
  }

  .section-buttons {
    flex-direction: row;
    align-items: center;
    gap: var(--space-sm);
  }

</style>