---
import AtomSanityImage from "../atoms/atom-sanityImage.astro"
import AtomTag from "../atoms/atom-tag.astro"

interface Props {
  post: any,
  currentBrand: any,
}

const { post } = Astro.props

const date = new Date(post.postDate)
const formattedDate = `${date.getMonth().toString().padStart(2, "0")}.${date.getDate().toString().padStart(2, "0")}.${date.getFullYear().toString().padStart(2, "0")}`
---
<div class="blog-post">
  <div class="blog-post-media">
    <AtomSanityImage 
      sizes="20vw"
      image={post.thumbnailImage.image}
      aspectRatio={3 / 4}
    />
  </div>
  <div class="blog-post-content">
    <div class="blog-post-info">
      <AtomTag
        title={post.category.title}
        url={`${post.agencyBrand.slug.current === "/studio" ? "/studio" : "/"}insights/${post.category.slug.current}`} 
      />
      <p class="blog-post-date">{formattedDate}</p>
    </div>
    <a class="blog-post-title" href={`${post.agencyBrand.slug.current === "/studio" ? "/studio" : "/"}insights/${post.category.slug.current}/${post.slug.current}`} >{post.title}</a>
  </div>
</div>

<style>

.blog-post {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    gap: var(--space-sm);
    align-items: flex-start;
    border-top: 1px solid var(--color-border);
    padding-block: var(--space-sm);
  }

  .blog-post-content {
    flex: 0 1 100%;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: var(--space-xs);
  }

  .blog-post-title {
    text-decoration: none;
  }

  .blog-post-info {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: var(--space-xs);
    /* justify-content: space-between; */
    align-self: stretch;
  }

  .blog-post-date {
    margin: 0;
    color: var(--color-foreground-secondary);
  }

  .blog-post-media {
    flex: 0 0 20%;
    border-radius: var(--radius-sm);
    overflow: hidden;
  }
</style>