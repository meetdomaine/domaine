---
import AtomSanityMedia from "../atoms/atom-sanityMedia.astro"

interface Props {
    title: string,
    slug: any,
    thumbnailImage: any,
    category: any,
    brand?: string
}

const { title, thumbnailImage, slug, category, brand } = Astro.props
---
<a href={`${brand == 'studio' ? '/studio' : ''}/insights/${category.slug.current}/${slug.current}`} class="blog-card">
    <AtomSanityMedia
        image={thumbnailImage.image}
        aspectRatio={1 / 1}
        sizes="30vw"
    />
    <h3>{title}</h3>

</a>

<style>
    .blog-card {
        flex: 0 1 100%;
    }
</style>