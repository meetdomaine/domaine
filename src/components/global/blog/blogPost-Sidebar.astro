---
import GlobalBlogTile from "./global-BlogTile.astro"

const { latestPosts } = Astro.props
---
<aside class="blog-post-sidebar">
  <p class="h5">Latest Insights</p>
  <div class="blog-posts">
    {latestPosts.map((post) => (
      <GlobalBlogTile
        post={post}
        currentBrand={post.agencyBrand}
      />
    ))}
  </div>
</aside>

<style>
  .blog-post-sidebar {
    flex: 1 0 24rem;
    position: sticky;
    top: calc(var(--header-height) * 1);
    display: flex;
    flex-direction: column;
    align-items: stretch;
    gap: var(--space-lg);
  }

  .blog-posts {
    display: flex;
    flex-direction: column;
    align-items: stretch;
  }
</style>