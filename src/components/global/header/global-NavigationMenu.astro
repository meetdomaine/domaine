---
import { Icon } from "astro-icon/components"
import { getRelativeLocaleUrl } from "astro:i18n"
const { brands, brandIndex, links, activePath, searchExposed, locale, searchPlaceholderTitle, searchPlaceholderText } = Astro.props

---
<div 
    id="navigation-menu" 
    class="navigation" 
    data-color-scheme="glass-dark" 
    data-visible={searchExposed ? "true" : "false"}
    data-default-visible={searchExposed ? "true" : "false"}
>

    <nav class="navigation-links color-reset" data-color-scheme="secondary">
        {links?.map((link, i) => (
            <a 
                href={locale ? getRelativeLocaleUrl(locale, link.linkUrl) : link.linkUrl} 
                class="navigation-link caption" 
                style={`transition-delay: ${0.1 * i}s`}
                data-active={activePath === link.linkUrl ? "true" : "false"}
            >{locale && link.linkText.translations?.[locale] ? link.linkText.translations[locale] : link.linkText.text}</a>
        ))}
    </nav>

    <div class="search-wrapper">
        <button class="search-button" popovertarget="search-menu">
            <Icon class="icon" name="icon-search" />
            <span class="placeholder-text">{locale && searchPlaceholderTitle.translations?.[locale] ? searchPlaceholderTitle.translations[locale] : searchPlaceholderTitle.text} <em>{locale && searchPlaceholderText.translations?.[locale] ? searchPlaceholderText.translations[locale] : searchPlaceholderText.text}</em></span>
            <span class="shortcut-label">&#47;</span>
        </button>
    </div>

</div>

<script>

    const menu = document.getElementById("navigation-menu")

    let previousScroll = 0

    document.addEventListener("scroll", (e) => {
        if (menu) {

            if (document.documentElement.scrollTop < previousScroll) {
                if (menu.dataset.defaultVisible === "true") {
                    menu.dataset.visible = "true"
                    
                } else {
                    if (document.documentElement.scrollTop >= 300) {
                        menu.dataset.visible = "true"
                    }
                }
            } else {
                menu.dataset.visible = "false"
            }
        }
        previousScroll = document.documentElement.scrollTop
    })

</script>

<style>

    .navigation {
        border-radius: var(--radius-sm);
        overflow: hidden;
    }

    .navigation-links {
        display: flex;
    }

    .navigation-link {
        text-decoration: none;
    }

    .search-button {
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        align-items: center;
        gap: var(--space-xs);
        width: 100%;
        background-color: transparent;

        .placeholder-text {
            display: flex;
            flex-direction: row;
            justify-content: flex-start;
            flex-grow: 1;
            gap: 0.5ch;

            em {
                font-style: normal;
                color: var(--color-foreground-secondary);
            }
        }

        .shortcut-label {
            border-radius: var(--radius-sm);
            border: 1px solid var(--color-foreground);
            color: var(--color-foreground);
            padding-inline: 0.6em;
            padding-block: 0.2em;
            opacity: .2;
        }
    }

    .utility-menu {
        justify-self: flex-end;
        display: flex;
        flex-direction: row;
        gap: var(--space-2xs);
    }

    .utility-button {
        min-width: 0;
        aspect-ratio: 1 / 1;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        flex: 0 0 auto;
        color: var(--color-foreground);
    }

    .utility-icon {
        height: 50%;
        position: absolute;
        top: 50%;
        left: 50%;
        translate: -50% -50%;
    }

    .brand-card {
        display: none;
    }

    .brand-cards--mobile {
        display: none;
    }


    @media screen and (width > 768px) {

        .navigation {
            /* max-width: 30em; */
            justify-self: center;
        }

        .navigation-links {
            height: var(--header-element-height);
            align-items: center;
            justify-content: center;
            gap: var(--space-3xs);
            padding-inline: var(--space-2xs);
            padding-block: var(--space-2xs);
            border-radius: var(--radius-sm) var(--radius-sm) 0 0;
            transition: color var(--anim-md), background-color var(--anim-md);
        }

        .navigation[data-visible="false"] .navigation-links {
            background-color: transparent;
            color: var(--color-lightest);
        }

        .navigation-link {
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            flex: 1 0 auto;
            border-radius: var(--radius-sm);
            transition-delay: 0s !important;
            transition: background-color var(--anim-sm), color var(--anim-sm);
            padding-inline: 1em;
        }

        .navigation[data-visible="false"] .navigation-link:hover {
            background-color: var(--color-darkest);
            color: var(--color-lighter);
        }

        .navigation-link:hover {
            background-color: var(--color-lightest);
            color: var(--color-dark);
        }

        .navigation-link[data-active="true"] {
            background-color: var(--color-lightest);
            color: var(--color-darkest);
        }

        .navigation[data-visible="false"] .navigation-link[data-active="true"] {
            background-color: var(--color-darkest);
            color: var(--color-lightest);
        }

        .search-button {
            height: var(--header-element-height);
            max-height: 0px;
            border-radius: 0 0 var(--radius-sm) var(--radius-sm);
            transition: max-height var(--anim-md), padding var(--anim-md), opacity var(--anim-md);
            opacity: 0;
            padding-block: 0;
        }

        .navigation[data-visible="true"] .search-button {
            max-height: var(--header-element-height);
            opacity: 1;
        }

        .search-button em {
            color: var(--color-light);
        }
    }

    @media screen and (width <= 768px) {

        .navigation {
            /* visibility: hidden; */
            position: absolute;
            top: var(--header-height);
            left: 0;
            right: 0;
            width: calc(100vw - var(--page-margin) * 2);
            display: flex;
            flex-direction: column-reverse;
            color: var(--color-darkest);
            opacity: 0;
            visibility: hidden;
            border-radius: 0 0 var(--radius-sm) var(--radius-sm);
            background-color: transparent;
            backdrop-filter: none;
            -webkit-backdrop-filter: none;
            transition: top var(--anim-sm), left var(--anim-sm), right var(--anim-sm), top var(--anim-sm), visibility var(--anim-sm), opacity var(--anim-sm);
        }

        :global(header.navigation-open) .navigation {
            /* height: 100px; */
            top: var(--header-height);
            left: var(--page-margin);
            right: var(--page-margin);
            top: calc(var(--header-height) + var(--header-top-margin));
            opacity: 1;
            visibility: visible;
        }

        .search-wrapper {
            padding-top: var(--space-md);
            transition: height var(--anim-sm);
        }

       

        .search-wrapper,
        .navigation-links {
            background-color: var(--color-lighter);
            padding-inline: var(--space-sm);
        }

        .search-button {
            translate: 0 1em;
            opacity: 0;
            transition: translate var(--anim-md), opacity var(--anim-md);

            .shortcut-label {
                display: none;
            }
        }

        :global(header.navigation-open) .search-button {
            translate: 0 0;
            opacity: 1;
        }

        .navigation-links {
            flex-direction: column;
            justify-content: space-around;
            align-items: flex-start;
            height: auto;
            gap: var(--space-md);
            padding-block: var(--space-xl);
            border-radius: 0 0 var(--radius-sm) var(--radius-sm);
        }

        .navigation::after {
            display: none;
        }

        .navigation-link,
        html[data-brand="Studio"] .navigation-link {
            --base-size: 32;
            --min-size: 28;
            letter-spacing: -0.03em;
            translate: 0 0.5em;
            opacity: 0;
            transition: translate var(--anim-md), opacity var(--anim-md);
            /* font-weight: inherit; */
        }


        html[data-brand="Studio"] .navigation-link {
            font-weight: 200;
        }

        :global(header.navigation-open) .navigation-link {
            opacity: 1;
            translate: 0 0;
        }

        .search-button {
            background-color: var(--color-lightest);
            color: var(--color-darkest);
            height: var(--header-height);
        }

        .brand-cards--mobile {
            display: flex;
            flex-direction: column;
            align-items: stretch;
            padding-top: var(--space-xs);
            gap: var(--space-2xs);
        }

        .brand-card--mobile {
            display: block;
            border-radius: var(--radius-sm);
            background-color: var(--color-lighter);
            overflow: hidden;
            text-decoration: none;
            translate: 0 1em;
            opacity: 0;
            transition: translate var(--anim-lg), opacity var(--anim-lg);
        }

        :global(header.navigation-open) .brand-card--mobile {
            translate: 0 0;
            opacity: 1;
            transition-delay: 0.6s;
        }

        .brand-card--mobile__header {
            padding-inline: var(--space-md);
            padding-block: var(--space-sm);
            background-color: var(--color-lightest);
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: space-between;
        }

        .brand-card--mobile__content {
            padding-inline: var(--space-md);
            padding-block: var(--space-sm);
            color: var(--color-dark);
            margin: 0;
        }


        
    }

</style>