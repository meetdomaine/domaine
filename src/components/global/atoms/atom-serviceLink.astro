---
import { Icon } from 'astro-icon/components'


interface Props {
  title: string,
  url: string,
  excerpt?: string,
}

const { title, url, excerpt } = Astro.props
---
<a class="service" href={url}>
  <p class="service-title">{title}</p>
  <Icon name="arrow-forward" />
  { excerpt && 
      <div class="service-detail" data-color-scheme="glass-light">
          <p>{excerpt}</p> 
      </div>
  }
</a>

<style>


  .service {
      position: relative;
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      border-bottom: 1px solid var(--color-border);
      padding-block: 0.5em;
      text-decoration: none;
  }

  .service:hover {
      transition: color var(--anim-sm), padding var(--anim-sm);
      color: var(--color-background);
      padding-inline: var(--space-xs);
  }

  .service::after {
      content: "";
      position: absolute;
      left: 0;
      bottom: 0;
      right: 0;
      height: 0%;
      transition: height var(--anim-sm);
      background-color: var(--color-foreground);
      z-index: -1;
      border-radius: var(--radius-sm);
  }


  .service-detail {
      position: absolute;
      max-width: 16em;
      top: calc(var(--space-2xs) * -1);
      right: calc(var(--space-xs) * -1);
      translate: 100% 20px;
      color: var(--color-foreground);
      /* color: var(--color-background); */
      /* mix-blend-mode: difference; */
      opacity: 0;
      pointer-events: none;
      transition: opacity var(--anim-sm), translate var(--anim-sm);
      padding: var(--space-2xs);
      border-radius: var(--radius-sm);
      /* background-color: var(--color-background); */
  }

  .service:hover::after {
      height: 100%;
  }

  .service:hover .service-detail {
      opacity: 1;
      translate: 100% 0px;
  }

  .service-title {
      margin: 0;
      text-decoration: none;
  }

  @media screen and (width < 768px) {
        
    .service-detail {
        display: none;
    }
  }

</style>