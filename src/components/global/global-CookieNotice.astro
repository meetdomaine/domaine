---
import AtomRichContent from "./atoms/atom-richContent.astro"

const { content, locale } = Astro.props
---
<div id="cookie-notice" class="cookie-notice" data-hidden="true" data-color-scheme="glass-dark">
    <div class="notice-text caption"></p>
        <AtomRichContent 
            content={content}
            locale={locale}
        />
    </div>
    <div class="buttons">
        <button id="cookie-deny" class="button-reset button-deny h5">Deny</button>
        <button id="cookie-accept" class="button-reset h5">Accept</button>
    </div>
</div>

<script>
    const cookieNotice = document.getElementById("cookie-notice")
    const acceptButton = document.getElementById("cookie-accept")
    const denyButton = document.getElementById("cookie-deny")

    declare global {
        interface Window {
            gtag: any,
            dataLayer: any,
            _hsp: any,
        }
    }

    // window.dataLayer = window.dataLayer || [];

    const setConsent = (consent) => {
        const consentMode = {
            'ad_storage': consent.marketing ? 'granted' : 'denied',
            'ad_user_data': consent.marketing ? 'granted' : 'denied',
            'ad_personalization': consent.marketing ? 'granted' : 'denied',
            'analytics_storage': consent.analytics ? 'granted' : 'denied',
            'functionality_storage': consent.necessary ? 'granted' : 'denied',
            'personalization_storage': consent.preferences ? 'granted' : 'denied',
            'security_storage': consent.preferences ? 'granted' : 'denied',
        }
        window.gtag('consent', 'update', consentMode)
        window.dataLayer.push({ event: 'consentUpdate' });
        localStorage.setItem('consentMode', JSON.stringify(consentMode))
    }

    const hideNotice = () => {
        cookieNotice.dataset.hidden = "true"
    }

    const handleAccept = () => {
        setConsent({
            necessary: true,
            analytics: true,
            marketing: true,
            preferences: false,
        })
        window._hsp.push([
            'setHubSpotConsent',
            {
                analytics: true,
                advertisement: true,
                functionality: true,
            },
        ]);
        hideNotice()
    }

    const handleDecline = () => {
        setConsent({
            necessary: false,
            analytics: false,
            marketing: false,
            preferences: false,
        })
        hideNotice()
    }

    document.addEventListener("astro:page-load", () => {

        const cookiedConsent = localStorage.getItem('consentMode')

        if (cookiedConsent === null) {
            cookieNotice.dataset.hidden = "false"
        } else {
            setConsent(JSON.parse(cookiedConsent))
        }

        // Set HubSpot consent to false initially
        window._hsp = window._hsp || [];
        window._hsp.push([
            'setHubSpotConsent',
            {
                analytics: false,
                advertisement: false,
                functionality: false,
            },
        ]);

        acceptButton.addEventListener("click", handleAccept)
        denyButton.addEventListener("click", handleDecline)

    })

</script>

<style>
    .cookie-notice {
        position: fixed;
        bottom: var(--page-margin);
        left: var(--page-margin);
        max-width: calc(100% - var(--page-margin) * 2);
        z-index: 5;
        padding: var(--space-xs);
        display: flex;
        flex-direction: row;
        gap: var(--space-lg);
        flex-wrap: wrap;
        border-radius: var(--radius-sm);
        transition: opacity var(--anim-sm), translate var(--anim-sm);
    }

    .cookie-notice[data-hidden="true"] {
        opacity: 0;
        pointer-events: none;
        translate: 0 20px;
    }

    .notice-text {
        max-width: 40em;
    }

    .notice-text :global(p) {
        margin: 0;
    }

    .buttons {
        display: flex;
        flex-direction: row;
        gap: var(--space-sm);
        align-self: stretch;
    }

    .buttons button {
        flex: 0 1 100%;
        padding-inline: var(--space-xs);
    }

    .button-deny {
        color: var(--color-foreground-secondary);
    }
</style>