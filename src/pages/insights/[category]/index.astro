---
import { sanityClient } from 'sanity:client';
import { blogCardFields } from '../../../components/global/utils/cms-queries';
import LayoutDomaineBlogIndex from '../../../layouts/Layout_Domaine-BlogIndex.astro';

export async function getStaticPaths() {
    const categories = await sanityClient.fetch(`*[_type == "type_blogCategory"]`)
    return categories.map((category) => {
        // console.log(category)
        return {
            params: { category: category.slug.current },
            props: { content: category }
        }
    })
}

interface Props {
    content: any
}

const { content } = Astro.props;

const pageSettings = await sanityClient.fetch(`*[_type == "page_blog-index" && _id == "page_blog-index-domaine"][0]`)
const blogPosts = await sanityClient.fetch(`*[_type == "type_blog" && agencyBrand->name == "Domaine" && category->_id == '${content._id}' ] { ..., ${blogCardFields}} | order( postDate desc)`)
---
<LayoutDomaineBlogIndex
    pageSetting={pageSettings}
    blogPosts={blogPosts}
    heading={content.title}
    subheading="Lorem ipsum dolor sit amet."
    searchFilter="type:blog-category"
>

</LayoutDomaineBlogIndex>
