---
import { sanityClient } from "sanity:client"
import LayoutDomaine from "../../../layouts/LayoutDomaine.astro"
import { paths } from "../../../components/global/utils/paths"

export async function getStaticPaths() {
    const services = await sanityClient.fetch(`*[_type == "type_service" && "Domaine" in agencyBrands[]->name ] {..., serviceGroup->{..., serviceType->{...}} } | order(orderRank)`)
    return services.map((service) => {
        // console.log(service)
        return {
            params: { serviceType: service.serviceGroup.serviceType.slug.current, service: service.slug.current },
            props: { content: service, serviceGroup: service.serviceGroup, serviceType: service.serviceGroup.serviceType }
        }
    })
}

interface Props {
    content: any,
    serviceType: any,
    serviceGroup: any,
}

const { content, serviceType, serviceGroup } = Astro.props;
---
<LayoutDomaine
    title={content.metafields && content.metafields.title ? content.metafields.title : content.title}
    searchFilter="type:service"
>
    <a href={`${paths.root.services.path}/${serviceType.slug.current}/`}><h6>{serviceType.title}</h6>
    <a href={`${paths.root.services.path}/${serviceType.slug.current}/${serviceGroup.slug.current}`}><h3>{serviceGroup.title}</h3></a>
    <h1>{content.title}</h1>
</LayoutDomaine>