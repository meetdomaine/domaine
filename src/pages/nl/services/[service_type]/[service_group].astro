---
import { getCollection } from "astro:content";
import LayoutDomaineServiceGroup from "../../../../layouts/Layout-Domaine_ServiceGroup.astro";
import { Locales } from "../../../../enums/locales";

export async function getStaticPaths() {
    const serviceGroups = await getCollection('serviceGroups_Domaine')
    return serviceGroups.map((serviceGroup) => {
        return {
            params: { 
              service_type: serviceGroup.data.serviceType.slug.current, 
              service_group: serviceGroup.id
            },
            props: { 
              content: {...serviceGroup.data},
              serviceType: serviceGroup.data.serviceType 
            }
        }
    })
}

const { service_group } = Astro.params
const { content, serviceType } = Astro.props;
---
<LayoutDomaineServiceGroup
    content={content}
    serviceType={serviceType}
    serviceGroup={service_group}
    locale={Locales.NL}
/>