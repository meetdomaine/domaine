---
import LayoutProjectsIndex from '../../../layouts/Layout_ProjectsIndex.astro';
import { getCollection } from 'astro:content';
import { getEntry } from 'astro:content';

export async function getStaticPaths() {
    const partners = await getCollection('partners_Domaine')
    return partners.map((partner) => {
        return {
            params: { partner: partner.id },
            props: { content: {...partner.data} }
        }
    })
}

const { content } = Astro.props
const projects = await Promise.all(content.relatedProjects.map(async (project) => await getEntry('projects_Domaine', project.slug.current)))
---
<LayoutProjectsIndex
content={content}
    projects={projects}
    currentPath={`/partners/${content.slug.current}`}
/>