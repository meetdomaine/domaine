---
import { sanityClient } from 'sanity:client';
import { blogCardFields, projectGridFields } from '../../../components/global/utils/cms-queries';
import LayoutDomaineProjects from '../../../layouts/Layout-Domaine-ProjectsIndex.astro';

export async function getStaticPaths() {
    const features = await sanityClient.fetch(`*[_type == "type_projectFeature" && count(*[_type=='type_project' && agencyBrand->slug.current == 'domaine' && references(^._id)]) > 0 ]{..., "relatedBlogPosts": *[_type=='type_blog' && references(^._id)]{${blogCardFields}} | order(postDate)}`)
    return features.map((feature) => {
        return {
            params: { feature: feature.slug.current },
            props: { content: feature }
        }
    })
}

interface Props {
    content: any
}

const { content } = Astro.props
const projects = await sanityClient.fetch(`*[_type == "type_project" && agencyBrand->slug.current == 'domaine' && '${content._id}' in features[]->_id ]{${projectGridFields}} | order(orderRank)`)
---
<LayoutDomaineProjects 
    title={ `Work | ${content.metafields && content.metafields.title ? content.metafields.title : content.title}`}
    description={content.metafields && content.metafields.description ? content.metafields.description : null}
    searchFilter="type:project-feature"
    heading={content.title}
    subheading={content.excerpt}
    projects={projects}
    currentPath={`/features/${content.slug.current}`}
>
    <!-- <p slot="before-grid">Howdy</p>
    <p slot="after-grid">End</p> -->
</LayoutDomaineProjects>