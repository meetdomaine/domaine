---
import LayoutDomaineProjects from '../../../layouts/Layout-Domaine_ProjectsIndex.astro';
import { urlFor } from '../../../components/global/utils/cms-queries';
import { getCollection } from 'astro:content';
import { getEntry } from 'astro:content';

export async function getStaticPaths() {
    const services = await getCollection('services_Domaine')
    return services.map((service) => {
        return {
            params: { service: service.id },
            props: { content: {...service.data} }
        }
    })
}

const { content } = Astro.props
// const allProjects = await getCollection('projects_Domaine')
// const projects = allProjects.filter((project) => project.data.services && project.data.services.some((service) => service._id === content._id ))
const projects = await Promise.all(content.relatedProjects.map(async (project) => await getEntry('projects_Domaine', project.slug.current)))
---
<LayoutDomaineProjects 
    title={content.metafields && content.metafields.title ? content.metafields.title : content.title}
    description={content.metafields?.description ? content.metafields.description : null}
    image={content.metafields?.image ? urlFor(content.metafields.image).url() : null}
    searchFilter="type:project-service"
    heading={content.title}
    subheading={content.excerpt}
    projects={projects}
    currentPath={`/services/${content.slug.current}`}
    relatedBlogPosts={content.relatedBlogPosts}
/>