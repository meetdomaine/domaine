---
import { sanityClient } from 'sanity:client';
import { paths } from '../../components/global/utils/paths';
import LayoutDomaine from '../../layouts/Layout-Domaine.astro';
import { imageFields, projectGridFields } from '../../components/global/utils/cms-queries';
import SectionProjectsFeed from '../../components/global/sections/section-ProjectsFeed.astro';
import PartnerPostHero from '../../components/global/partners/partnerPost-hero.astro';

export const prerender = true

export async function getStaticPaths() {
    const partners = await sanityClient.fetch(`
        *[_type == "type_partner" && tier->createLandingPages == true ]{ 
            title, 
            slug, 
            excerpt,
            description,
            icon{${imageFields}}, 
            tier->{...}, 
            websiteUrl, 
            websiteText,
            instagramUrl,
            twitterUrl,
            linkedInUrl,
            youTubeUrl,
            tikTokUrl,
            "projects": *[_type == "type_project" && references(^._id)]{${projectGridFields}} | order(orderRank)[0...3]  
        }`)

    return partners.map((partner) => {
        return {
            params: { partner: partner.slug.current },
            props: { content: partner }
        }
    })
}

interface Props {
    content: any
}


const { content } = Astro.props;

---
<LayoutDomaine
    title={content.title}
    searchFilter="type:partner"
    activePath="/partners"
>

    <PartnerPostHero 
        tier={content.tier}
        title={content.title}
        excerpt={content.excerpt}
        description={content.description}
        icon={content.icon}
        websiteText={content.websiteText}
        websiteUrl={content.websiteUrl}
        instagramUrl={content.instagramUrl}
        twitterUrl={content.twitterUrl}
        linkedInUrl={content.linkedInUrl}
        youTubeUrl={content.youTubeUrl}
        tikTokUrl={content.tikTokUrl}
    />

    {content.projects &&
        <SectionProjectsFeed 
            heading={`Our work with ${content.title}`}
            projects={content.projects}
        />
    }
</LayoutDomaine>