---
import { sanityClient } from 'sanity:client';
import LayoutStudioProjects from '../../../../layouts/Layout_Studio-ProjectsIndex.astro';
import { projectGridFields } from '../../../../components/global/utils/cms-queries';

export async function getStaticPaths() {
    const serviceGroup = await sanityClient.fetch(`*[_type == "type_serviceGroup" && 'Studio' in agencyBrands[]->name ]`)
    return serviceGroup.map((serviceGroup) => {
        return {
            params: { serviceGroup: serviceGroup.slug.current },
            props: { content: serviceGroup }
        }
    })
}

interface Props {
    content: any
}

const { content } = Astro.props
const projects = await sanityClient.fetch(`*[_type == "type_project" && agencyBrand->name == 'Studio' && '${content._id}' in services[]->serviceGroup->_id ]{${projectGridFields}} | order(orderRank)`)

---
<LayoutStudioProjects 
    title={ `Work | ${content.metafields && content.metafields.title ? content.metafields.title : content.title}`}
    description={content.metafields && content.metafields.description ? content.metafields.description : null}
    searchFilter="type:project-service-group"
    heading={content.title}
    subheading={content.excerpt}
    projects={projects}
    currentPath={`/services/${content.slug.current}`}
>
</LayoutStudioProjects>