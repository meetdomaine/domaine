---
import { getEntry } from 'astro:content';
import { getCollection } from 'astro:content';
import LayoutProjectsIndex from '../../../../layouts/Layout_ProjectsIndex.astro';
import { Brands } from '../../../../enums/brands';

export async function getStaticPaths() {
    const services = await getCollection('services_Studio')
    return services.map((service) => {
        return {
            params: { service: service.id },
            props: { content: {...service.data} }
        }
    })
}

const { content } = Astro.props
const projects = await Promise.all(content.relatedProjects.map(async (project) => await getEntry('projects_Studio', project.slug.current)))
---
<LayoutProjectsIndex
    content={content}
    projects={projects}
    currentPath={`/services/${content.slug.current}`}
    brand={Brands.STUDIO}
/>