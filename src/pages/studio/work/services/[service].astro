---
import { sanityClient } from 'sanity:client';
import LayoutStudioProjects from '../../../../layouts/LayoutStudioProjects.astro';
import { projectGridFields } from '../../../../components/global/utils/cms-queries';

export async function getStaticPaths() {
    const services = await sanityClient.fetch(`*[_type == "type_service" && 'Studio' in agencyBrands[]->name ]`)
    return services.map((service) => {
        return {
            params: { service: service.slug.current },
            props: { content: service }
        }
    })
}

interface Props {
    content: any
}

const { content } = Astro.props
const projects = await sanityClient.fetch(`*[_type == "type_project" && agencyBrand->name == 'Studio' && '${content._id}' in services[]->_id ]{${projectGridFields}} | order(orderRank)`)

---
<LayoutStudioProjects 
    title={ `Work | ${content.metafields && content.metafields.title ? content.metafields.title : content.title}`}
    description={content.metafields && content.metafields.description ? content.metafields.description : null}
    searchFilter="type:project-service"
    heading={content.title}
    subheading={content.excerpt}
    projects={projects}
    currentPath={`/services/${content.slug.current}`}
>
</LayoutStudioProjects>