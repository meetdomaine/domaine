---
import { sanityClient } from 'sanity:client';
import LayoutStudioProjects from '../../../../layouts/Layout-Studio-ProjectsIndex.astro';
import { blogCardFields, projectGridFields } from '../../../../components/global/utils/cms-queries';
import { allProjects_Studio } from '../../../../components/global/utils/cms-content';

export async function getStaticPaths() {
    const partners = await sanityClient.fetch(`*[_type == "type_partner" && count(*[_type=='type_project' && agencyBrand->slug.current == 'studio' && references(^._id)]) > 0 ]{..., "relatedBlogPosts": *[_type=='type_blog' && references(^._id)]{${blogCardFields}} | order(postDate)}`)
    return partners.map((partner) => {
        return {
            params: { partner: partner.slug.current },
            props: { content: partner }
        }
    })
}

interface Props {
    content: any
}

const { content } = Astro.props
const projects = allProjects_Studio.filter((project) => project.partners && project.partners.some((partner) => partner._id === content._id))
---
<LayoutStudioProjects 
    title={ `Work | ${content.metafields && content.metafields.title ? content.metafields.title : content.title}`}
    description={content.metafields && content.metafields.description ? content.metafields.description : null}
    searchFilter="type:project-service"
    heading={content.title}
    subheading={content.excerpt}
    projects={projects}
    currentPath={`/partners/${content.slug.current}`}
    relatedBlogPosts={content.relatedBlogPosts}
>
</LayoutStudioProjects>