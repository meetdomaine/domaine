---
import { sanityClient } from 'sanity:client';
import LayoutStudioProjects from '../../../../layouts/LayoutStudioProjects.astro';
import { projectGridFields } from '../../../../components/global/utils/cms-queries';

export async function getStaticPaths() {
    const industries = await sanityClient.fetch(`*[_type == "type_industry" ]`)
    return industries.map((industry) => {
        return {
            params: { industry: industry.slug.current },
            props: { content: industry }
        }
    })
}

interface Props {
    content: any
}

const { content } = Astro.props
const projects = await sanityClient.fetch(`*[_type == "type_project" && agencyBrand->name == 'Studio' && industry->_id == '${content._id}']{${projectGridFields}} | order(orderRank)`)

---
<LayoutStudioProjects 
    title={ `Work | ${content.metafields && content.metafields.title ? content.metafields.title : content.title}`}
    description={content.metafields && content.metafields.description ? content.metafields.description : null}
    searchFilter="type:industry"
    heading={content.title}
    subheading={content.excerpt}
    projects={projects}
    currentPath={`/industries/${content.slug.current}`}
>
</LayoutStudioProjects>