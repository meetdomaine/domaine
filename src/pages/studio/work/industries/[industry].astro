---
import LayoutStudioProjects from '../../../../layouts/Layout-Studio-ProjectsIndex.astro';
import { getCollection } from 'astro:content';

export const prerender = true

export async function getStaticPaths() {
    const industries = await getCollection('industries_Studio')
    return industries.map((industry) => {
        return {
            params: { industry: industry.id },
            props: { content: {...industry.data} }
        }
    })
}

interface Props {
    content: any
}

const { content } = Astro.props
const allProjects = await getCollection('projects_Studio')
const projects = allProjects.filter((project) => project.data.industry && project.data.industry._id === content._id)
---
<LayoutStudioProjects 
    title={content.metafields && content.metafields.title ? content.metafields.title : content.title}
    description={content.metafields && content.metafields.description ? content.metafields.description : null}
    searchFilter="type:industry"
    heading={content.title}
    subheading={content.excerpt}
    projects={projects}
    currentPath={`/industries/${content.slug.current}`}
    relatedBlogPosts={content.relatedBlogPosts}
>
</LayoutStudioProjects>