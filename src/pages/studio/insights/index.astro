---
import { sanityClient } from 'sanity:client';
import { blogCardFields } from '../../../components/global/utils/cms-queries';
import LayoutStudioBlogIndex from '../../../layouts/Layout-Studio-BlogIndex.astro';
import { allBlogPosts_Studio } from '../../../components/global/utils/cms-content';

const pageSettings = await sanityClient.fetch(`*[_type == "page_blog-index" && _id == "page_blog-index-studio"][0]`)
const blogPosts = allBlogPosts_Studio
---
<LayoutStudioBlogIndex
    pageSettings={pageSettings}
    blogPosts={blogPosts}
    heading="Domaine Studio Insights"
    subheading="Lorem ipsum dolor sit amet."
    searchFilter="type:page"
>
</LayoutStudioBlogIndex>