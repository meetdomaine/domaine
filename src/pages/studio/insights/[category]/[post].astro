---
import LayoutStudio from '../../../../layouts/Layout-Studio.astro';
import { paths } from '../../../../components/global/utils/paths';
import { allBlogPosts_Studio } from '../../../../components/global/utils/cms-content';
import BlogPostHero from '../../../../components/global/blog/blog-PostHero.astro';

export async function getStaticPaths() {
    const posts = allBlogPosts_Studio
    return posts.map((post) => {
        // console.log(post)
        return {
            params: { post: post.slug.current, category: post.category.slug.current },
            props: { content: post }
        }
    })
}

interface Props {
    content: any
}

const { content } = Astro.props;
---
<LayoutStudio
    title={content.title}
    searchFilter="type:blog-post_studio"
    activePath="/studio/insights"
>
    <BlogPostHero
        post={content}
    />
    
</LayoutStudio>