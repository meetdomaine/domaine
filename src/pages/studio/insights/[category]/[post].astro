---
import { getCollection } from 'astro:content';
import LayoutBlogPost from '../../../../layouts/Layout_BlogPost.astro';
import { Brands } from '../../../../enums/brands';
import { getEntry } from 'astro:content';
const { env } = Astro.locals.runtime;

export async function getStaticPaths() {
    const blogPosts = await getCollection('blogPosts')
    return blogPosts.filter((blogPost) => blogPost.data.agencyBrand.name === Brands.STUDIO).map((post) => {
        return {
            params: { 
                post: post.id, 
                category: post.data.category.slug.current 
            },
            props: { 
                content: {...post.data} 
            }
        }
    })
}

let blogPostContent

if (env.SERVER_RENDERING_ENABLED) {
    const { post } = Astro.params
    const { data } = await getEntry('blogPosts', post)
    blogPostContent = data
} else {
    const { content } = Astro.props
    blogPostContent = content
}
---
<LayoutBlogPost
  content={blogPostContent}
  brand={Brands.STUDIO}
/>
