---
import LayoutDomaineProjects from '../../../../layouts/Layout-Domaine_ProjectsIndex.astro';
import { urlFor } from '../../../../lib/cms-queries';
import { getCollection } from 'astro:content';
import { Locales } from '../../../../enums/locales';
import { getEntry } from 'astro:content';

export async function getStaticPaths() {
    const industries = await getCollection('industries_Domaine')
    return industries.map((industry) => {
        return {
            params: { industry: industry.id },
            props: { content: {...industry.data} }
        }
    })
}

const { content } = Astro.props
const projects = await Promise.all(content.relatedProjects.map(async (project) => await getEntry('projects_Domaine', project.slug.current)))
---
<LayoutDomaineProjects 
    title={content.metafields?.title ? content.metafields.title : content.title}
    description={content.metafields?.description ? content.metafields.description : null}
    image={content.metafields?.image ? urlFor(content.metafields.image).url() : null}
    heading={content.title}
    subheading={content.excerpt}
    projects={projects}
    currentPath={`/industries/${content.slug.current}`}
    relatedBlogPosts={content.relatedBlogPosts}
    searchFilter="type:industry"
    locale={Locales.DE}
/>